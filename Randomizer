d6 = [1,2,3,4,5,6]
dadosEscolhidos = []
for num in range(6):
        resultadod6 = []
        for index in range(4):
                resultadod6.append(random.choice(d6))
        resultadod6.remove(min(resultadod6))
        soma = sum(resultadod6)
        dadosEscolhidos.append(soma)
def printdado():
    print("Força = " + str(dadosEscolhidos[0]))
    print("Destreza = " + str(dadosEscolhidos[1]))
    print("Constituição = " +str(dadosEscolhidos[2]))
    print("Inteligência = " + str(dadosEscolhidos[3]))
    print("Sabedoria = " + str(dadosEscolhidos[4]))
    print("Carisma = " + str(dadosEscolhidos[5]))
